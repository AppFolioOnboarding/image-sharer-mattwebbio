<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <td scope="col"><b>#</b></td>
      <td scope="col"><b>URL</b></td>
      <td scope="col"><b>Tags</b></td>
    </tr>
  </thead>
  <tbody>
    <% @all_images.each_with_index do |image, index| %>
      <tr>
          <td scope="row"><%= link_to(index, image) %></td>
          <td>
            <%= link_to(image) do %>
              <%= image_tag(image.url, :width => 200) %>
            <% end %>
          </td>
        <td><%= image.tag_list %></td>
      </tr>
    <% end %>
  </tbody>
</table>

