<div class="float-right">
  <%= button_to 'Delete',
                image_path(@image.id),
                method: :delete,
                class: 'btn btn-danger',
                data: { confirm: 'Are you sure you want to delete this image?' } %>
</div>

<div class="row pt-5">
  <div class="col-6">
    <%= image_tag(@image.url) %>
  </div>
  <div class="col-6">
    <b>Image Tags:</b>
    <span id="tags"><%= @image.tag_list.map { |t| link_to t, images_path(tag: t) }.join(', ').html_safe %></span>
  </div>
</div>
